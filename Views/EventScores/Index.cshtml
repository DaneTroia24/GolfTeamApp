@model IEnumerable<GolfTeamApp.Models.EventScore>

@{
    ViewData["Title"] = "Event Scores";
}

<h1>Event Scores</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Coach") || User.IsInRole("Partner"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Score
        </a>
    </p>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Athlete
                    </th>
                    <th>
                        Event
                    </th>
                    <th>
                        Event Date
                    </th>
                    <th>
                        Golf Score
                    </th>
                    <th>
                        Holes Completed
                    </th>
                    <th>
                        Entered By
                    </th>
                    <th>
                        Date Entered
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Athlete?.PictureUrl))
                                {
                                    <img src="@item.Athlete.PictureUrl" alt="@item.Athlete.Name" 
                                         class="rounded-circle me-2" 
                                         style="width: 30px; height: 30px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" 
                                         style="width: 30px; height: 30px; font-size: 12px;">
                                        @(item.Athlete?.Name?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                }
                                <strong>@(item.Athlete?.Name ?? "Unknown")</strong>
                            </div>
                        </td>
                        <td>
                            <a asp-controller="GolfEvents" asp-action="Details" asp-route-id="@item.Event?.EventId" 
                               class="text-decoration-none">
                                @(item.Event?.Title ?? "Unknown Event")
                            </a>
                        </td>
                        <td>
                            @(item.Event?.EventDate.ToString("MM/dd/yyyy") ?? "Unknown")
                        </td>
                        <td>
                            <span class="badge badge-success badge-lg">@item.GolfScore</span>
                        </td>
                        <td>
                            @item.HolesCompleted
                        </td>
                        <td>
                            @(item.EnteredByPartner?.Name ?? "Unknown")
                        </td>
                        <td>
                            @item.Timestamp.ToString("MM/dd/yyyy")
                        </td>
                        <td>
                            <!-- Everyone can view details -->
                            <a asp-action="Details" asp-route-id="@item.ScoreId" 
                               class="btn btn-sm btn-outline-info" title="View Details">
                                <i class="fas fa-eye"></i> Details
                            </a>

                            @if (User.IsInRole("Admin") || User.IsInRole("Coach"))
                            {
                                <!-- Admins and Coaches can edit and delete all scores -->
                                <a asp-action="Edit" asp-route-id="@item.ScoreId" 
                                   class="btn btn-sm btn-outline-primary" title="Edit Score">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.ScoreId" 
                                   class="btn btn-sm btn-outline-danger" title="Delete Score"
                                   onclick="return confirm('Are you sure you want to delete this score?')">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            }
                            else if (User.IsInRole("Partner"))
                            {
                                <!-- Partners can only edit scores for their assigned athletes -->
                                <a asp-action="Edit" asp-route-id="@item.ScoreId" 
                                   class="btn btn-sm btn-outline-primary" title="Edit Score">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <!-- NO DELETE button for Partners -->
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No Scores Found</h4>
        @if (User.IsInRole("Partner"))
        {
            <p>No scores have been entered for your assigned athlete(s) yet.</p>
        }
        else
        {
            <p>No scores have been entered in the system yet.</p>
        }
        <hr>
        <p class="mb-0">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add the first score
            </a>
        </p>
    </div>
}

@section Scripts {
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        /* Enhanced badge styling */
        .badge-lg {
            font-size: 0.9rem;
            padding: 0.5rem 0.75rem;
            font-weight: 600;
        }

        .badge-success {
            background-color: #28a745 !important;
            color: #fff !important;
        }

        /* Responsive table improvements */
        @@media (max-width: 768px) {
            .table-responsive table {
                font-size: 0.9rem;
            }
            
            .btn-sm {
                font-size: 0.8rem;
                padding: 0.25rem 0.5rem;
            }
        }

        /* Action button spacing */
        .btn-sm {
            margin-right: 0.25rem;
            margin-bottom: 0.25rem;
        }

        /* Ensure proper text alignment */
        .table td {
            vertical-align: middle;
        }
    </style>
}