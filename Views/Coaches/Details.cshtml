@model GolfTeamApp.Models.Coach

@{
    ViewData["Title"] = "Coach Details";
}

<h1>Coach Details</h1>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
                }
                else
                {
                    <span class="text-muted">No phone number provided</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <!-- Admin can edit any coach -->
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.CoachId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Coach
        </a>

        <a asp-action="Delete" asp-route-id="@Model.CoachId" class="btn btn-outline-danger"
           onclick="return confirm('Are you sure you want to delete this coach?')">
            <i class="fas fa-trash"></i> Delete Coach
        </a>
    }

    <!-- Coaches can only edit their own profile -->
    @if (User.IsInRole("Coach") && !User.IsInRole("Admin"))
    {
        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        var canEdit = Model.UserId == userId;

        if (canEdit)
        {
            <a asp-action="Edit" asp-route-id="@Model.CoachId" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit My Profile
            </a>
        }
    }

    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Coaches
    </a>
</div>

@section Scripts {
    <!-- Font Awesome for icons (if not already included in _Layout.cshtml) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}