@model IEnumerable<GolfTeamApp.Models.Coach>

@{
    ViewData["Title"] = "Coaches";
}

<h1>Coaches</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Coach
        </a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <!-- Everyone can view details -->
                    <a asp-action="Details" asp-route-id="@item.CoachId" class="btn btn-sm btn-outline-info" title="View Details">
                        <i class="fas fa-eye"></i> Details
                    </a>

                    <!-- Admin can edit and delete any coach -->
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.CoachId" class="btn btn-sm btn-outline-primary" title="Edit Coach">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.CoachId" class="btn btn-sm btn-outline-danger" title="Delete Coach"
                           onclick="return confirm('Are you sure you want to delete this coach?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    }

                    <!-- Coaches can only edit their own profile -->
                    @if (User.IsInRole("Coach") && !User.IsInRole("Admin"))
                    {
                        var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                        var canEdit = item.UserId == userId;

                        if (canEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@item.CoachId" class="btn btn-sm btn-outline-primary" title="Edit Your Profile">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No Coaches Found</h4>
        @if (User.IsInRole("Partner"))
        {
            <p>There are currently no coaches in the system.</p>
        }
        else if (User.IsInRole("Admin"))
        {
            <p>There are currently no coaches in the system.</p>
            <hr>
            <p class="mb-0"><a asp-action="Create" class="btn btn-primary">Create the first coach</a></p>
        }
        else
        {
            <p>You are currently the only coach in the system.</p>
        }
    </div>
}

@section Scripts {
    <!-- Font Awesome for icons (if not already included in _Layout.cshtml) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}