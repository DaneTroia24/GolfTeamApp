@model IEnumerable<GolfTeamApp.Models.GolfEvent>

@{
    ViewData["Title"] = "Golf Events";
}

<h1>Golf Events</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Coach"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Event
        </a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                Coach
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.EventDate.ToString("MM/dd/yyyy")
                </td>
                <td>
                    @DateTime.Today.Add(item.StartTime).ToString("h:mm tt")
                </td>
                <td>
                    @DateTime.Today.Add(item.EndTime).ToString("h:mm tt")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByCoach.Name)
                </td>
                <td>
                    <!-- Everyone can view details -->
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-info" title="View Details">
                        <i class="fas fa-eye"></i> Details
                    </a>

                    <!-- Only Admins and Coaches can edit/delete events -->
                    @if (User.IsInRole("Admin") || User.IsInRole("Coach"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-primary" title="Edit Event">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-outline-danger" title="Delete Event"
                           onclick="return confirm('Are you sure you want to delete this event?')">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">No Events Found</h4>
        <p>There are currently no golf events scheduled.</p>
        @if (User.IsInRole("Admin") || User.IsInRole("Coach"))
        {
            <hr>
            <p class="mb-0"><a asp-action="Create" class="btn btn-primary">Create the first event</a></p>
        }
    </div>
}

@section Scripts {
    <!-- Font Awesome for icons (if not already included in _Layout.cshtml) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}