@model GolfTeamApp.Models.Athlete
@{
    ViewData["Title"] = "Partner Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Partner Dashboard</h2>
            <p class="text-muted">Manage your assigned athlete</p>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- Athlete Info Card -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5><i class="fas fa-user"></i> Your Assigned Athlete: @Model.Name</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                @if (!string.IsNullOrEmpty(Model.PictureUrl))
                                {
                                    <img src="@Model.PictureUrl" alt="@Model.Name" class="img-thumbnail mb-3" style="max-width: 150px;">
                                }
                                else
                                {
                                    <div class="bg-light border rounded p-4 mb-3" style="width: 150px; height: 150px; margin: 0 auto;">
                                        <i class="fas fa-user fa-5x text-muted"></i>
                                    </div>
                                }
                                <h5>@Model.Name</h5>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card bg-info text-white text-center">
                                            <div class="card-body">
                                                <h4>@Model.SwingRating <small>/5</small></h4>
                                                <p class="mb-0">Swing Rating</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-success text-white text-center">
                                            <div class="card-body">
                                                <h4>@Model.PowerRating <small>/5</small></h4>
                                                <p class="mb-0">Power Rating</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card bg-warning text-white text-center">
                                            <div class="card-body">
                                                <h4>@Model.UnderstandingRating <small>/5</small></h4>
                                                <p class="mb-0">Understanding</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="/EventScores/Create" class="btn btn-primary btn-block">
                                    <i class="fas fa-plus-circle"></i> Record New Score
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/Athletes/Edit/@Model.AthleteId" class="btn btn-info btn-block">
                                    <i class="fas fa-edit"></i> Update Athlete Info
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/Athletes/Details/@Model.AthleteId" class="btn btn-success btn-block">
                                    <i class="fas fa-eye"></i> View Full Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Scores -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-chart-line"></i> Recent Scores for @Model.Name</h5>
                        <a href="/EventScores" class="btn btn-sm btn-outline-primary">View All Scores</a>
                    </div>
                    <div class="card-body">
                        @if (Model.EventScores != null && Model.EventScores.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Event</th>
                                            <th>Score</th>
                                            <th>Holes</th>
                                            <th>Date Recorded</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var score in Model.EventScores.OrderByDescending(s => s.Timestamp).Take(5))
                                        {
                                            <tr>
                                                <td><strong>@(score.Event?.Title ?? "Unknown Event")</strong></td>
                                                <td>
                                                    <span class="badge badge-primary">@score.GolfScore</span>
                                                </td>
                                                <td>@score.HolesCompleted</td>
                                                <td>@score.Timestamp.ToString("MMM dd, yyyy")</td>
                                                <td>
                                                    <a href="/EventScores/Details/@score.ScoreId" class="btn btn-sm btn-info">View</a>
                                                    <a href="/EventScores/Edit/@score.ScoreId" class="btn btn-sm btn-secondary">Edit</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <p class="text-muted">No scores recorded yet for @Model.Name.</p>
                                <a href="/EventScores/Create" class="btn btn-primary">Record First Score</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Athlete Assigned -->
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning text-center">
                    <h4><i class="fas fa-exclamation-triangle"></i> No Athlete Assigned</h4>
                    <p>You don't have an athlete assigned to you yet. Please contact your coach.</p>
                    <a href="/" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    }
</div>