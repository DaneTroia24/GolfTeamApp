@model GolfTeamApp.Models.Athlete

@{
    ViewData["Title"] = "Partner Dashboard";
}

<h1>Partner Dashboard</h1>
<p class="lead">Welcome, @ViewBag.PartnerName!</p>

@if (Model != null)
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Your Assigned Athlete</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            @if (!string.IsNullOrEmpty(Model.PictureUrl))
                            {
                                <img src="@Model.PictureUrl" alt="@Model.Name" class="img-fluid rounded-circle" style="width: 100px; height: 100px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; font-size: 36px;">
                                    @Model.Name.Substring(0, 1).ToUpper()
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <h4>@Model.Name</h4>
                            <p class="text-muted">Assigned to: @Model.Partner?.Name</p>

                            <div class="mt-3">
                                <a asp-controller="Athletes" asp-action="Details" asp-route-id="@Model.AthleteId" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Full Profile
                                </a>

                                <a asp-controller="EventScores" asp-action="Create" asp-route-athleteId="@Model.AthleteId" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Add New Score
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Quick Stats</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Total Scores Entered:</strong>
                        <span class="badge badge-primary badge-lg">@Model.EventScores.Count()</span>
                    </div>

                    @if (Model.EventScores.Any())
                    {
                        <div class="mb-3">
                            <strong>Latest Score:</strong>
                            <span class="badge badge-success badge-lg">@Model.EventScores.OrderByDescending(s => s.Timestamp).First().GolfScore</span>
                        </div>

                        <div class="mb-3">
                            <strong>Best Score:</strong>
                            <span class="badge badge-info badge-lg">@Model.EventScores.Min(s => s.GolfScore)</span>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No scores entered yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.EventScores.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Scores</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>Date</th>
                                        <th>Score</th>
                                        <th>Holes Completed</th>
                                        <th>Entered On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var score in Model.EventScores.OrderByDescending(s => s.Event.EventDate).Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="GolfEvents" asp-action="Details" asp-route-id="@score.Event.EventId">
                                                    @score.Event?.Title
                                                </a>
                                            </td>
                                            <td>@score.Event?.EventDate.ToString("MM/dd/yyyy")</td>
                                            <td><strong>@score.GolfScore</strong></td>
                                            <td>@score.HolesCompleted</td>
                                            <td>@score.Timestamp.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <a asp-controller="EventScores" asp-action="Details" asp-route-id="@score.ScoreId" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                <a asp-controller="EventScores" asp-action="Edit" asp-route-id="@score.ScoreId" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.EventScores.Count() > 10)
                        {
                            <div class="mt-3">
                                <a asp-controller="EventScores" asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-list"></i> View All Scores
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">No Athlete Assigned</h4>
        <p>You don't have any athletes assigned to you yet.</p>
        <hr>
        <p class="mb-0">Please contact your coach to be assigned an athlete.</p>
    </div>
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <a asp-controller="Athletes" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-users"></i> View All Athletes
                </a>

                <a asp-controller="GolfEvents" asp-action="Index" class="btn btn-outline-success">
                    <i class="fas fa-calendar"></i> View Events
                </a>

                <a asp-controller="EventScores" asp-action="Index" class="btn btn-outline-info">
                    <i class="fas fa-chart-bar"></i> View Scores
                </a>

                <a asp-controller="Coaches" asp-action="Index" class="btn btn-outline-warning">
                    <i class="fas fa-user-tie"></i> Contact Coaches
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Font Awesome for icons (if not already included in _Layout.cshtml) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}